<.auth_header type="login" />

<div class="auth-body">
  <.form for={@form} phx-change="validate" phx-submit="save" phx-hook="Session" id="login_form" class="auth-form">
    <.input type="email" field={@form[:email]} placeholder="email"/>
    <.input type="password" field={@form[:password]} placeholder="password"/>
    <div><%= @error %></div>
    <button type="submit" class="submit-button">Login</button>
  </.form>
</div>
